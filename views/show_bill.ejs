<% include partials/header %>



<div class="container">
    <div class="row content">
            <div class="col-sm">
                    <div class="list-group " style="margin: 50px 20px 0 0;width: 100%;">
                        <%console.log(bill)%>
                        <% bill.data.forEach(function(item){%>
                            <a href="/index/<%=item.stock._id%>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <div class="flex-column">
                                      <%=item.stock.name%> 
                                      <p><small><%=item.stock.material%></small></p>
                                      <p>Giá hiện tại: <small> <span class="badge badge-primary badge-pill"> <%=item.stock.sell_price.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1.")%>.000 đ</span> </small></p>
                                      <p>Giá nhập:     <small> <span class="badge badge-primary badge-pill"> <%=item.stock.import_price.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1.")%>.000 đ</span> </small></p>
                                      <h5>Giá khi bán:  <span class="badge badge-info badge-pill"> <%=item.price_when_sell.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1.")%>.000 đ</span></h5>
                                      <span class="badge badge-primary badge-pill"> <%=item.totals%></span>
                                    </div>
                                    <div class="image-parent">
                                        <img src="<%=item.stock.image%>" class="img-fluid img-add" alt="quixote">
                                    </div>
                                  </a>
                        <%})%>
            
                    </div>
                </div>
            
                <div class="col-sm ">
                        <div class="list-group" style="margin: 50px 40px;width: 70%;">
                                    <a href="/bill/<%=bill._id%>" class="list-group-item list-group-item-action flex-column align-items-start">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h5 class="mb-1">Tổng giá:</h5>
                                                <h5><%=bill.totals_money.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1.")%>.000 đ</h5>
                                            </div>
                                            <div class="d-flex w-100 justify-content-between">
                                                    <h6 class="mb-1">Giảm giá:</h6>
                                                    <h6><%=bill.sale.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1.")%>.000 đ</h6>
                                                </div>
                                                <div class="d-flex w-100 justify-content-between">
                                                        <h4 class="mb-1">Thành tiền:</h4>
                                                        <h4 style="color: red"><%=(bill.totals_money - bill.sale).toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1.")%>.000 đ</h4>
                                                    </div>
                                        </a>
                            </div>
                </div>
    </div>

</div>

<% include partials/footer %>